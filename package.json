{
  "name": "pascua",
  "version": "0.0.0-semantic-release",
  "description": "Calculate Easter date for a given year",
  "main": "lib/pascua.js",
  "scripts": {
    "format": "prettier . --write",
    "lint": "eslint . --ext .ts --fix",
    "test": "jest --coverage",
    "build": "tsc",
    "postinstall": "git config core.hooksPath .githooks || true",
    "prepare": "git config core.hooksPath .githooks || true"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MauricioRobayo/pascua/issues"
  },
  "homepage": "https://github.com/MauricioRobayo/pascua#readme",
  "author": "Mauricio Robayo <rfmajo@gmail.com> (https://www.mauriciorobayo.com)",
  "keywords": [
    "easter",
    "easter date",
    "gregorian calendar",
    "holidays"
  ],
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/jest": "^27.0.0",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "eslint": "^7.27.0",
    "eslint-config-airbnb-typescript": "^13.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.3",
    "jest": "^27.0.1",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "semantic-release": "^17.4.3",
    "ts-jest": "^27.0.1",
    "typescript": "^4.3.2"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MauricioRobayo/pascua.git"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix --ext .ts",
      "jest --bail --findRelatedTests"
    ],
    "**/*.{ts,js,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
